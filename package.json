{
  "name": "agent-skill-ninja",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.2.0",
  "publisher": "yamapan",
  "license": "CC-BY-NC-4.0",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/aktsmm/vscode-agent-skill-ninja"
  },
  "keywords": [
    "agent skills",
    "claude",
    "claude code",
    "copilot",
    "github copilot",
    "ai assistant",
    "skills",
    "anthropic",
    "mcp",
    "agents",
    "ninja"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "skill",
        "name": "skill",
        "fullName": "Agent Skill Ninja",
        "description": "Search, install and manage Agent Skills",
        "isSticky": false,
        "commands": [
          {
            "name": "search",
            "description": "Search for Agent Skills"
          },
          {
            "name": "install",
            "description": "Install an Agent Skill"
          },
          {
            "name": "list",
            "description": "List installed skills"
          },
          {
            "name": "recommend",
            "description": "Recommend skills for current project"
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "skillNinja_search",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "ninja",
          "忍者",
          "スキル",
          "エージェントスキル"
        ],
        "toolReferenceName": "searchSkills",
        "displayName": "Search Agent Skills",
        "icon": "$(search)",
        "modelDescription": "Search for Agent Skills (SKILL.md) / エージェントスキルを検索 / スキル忍者 / NINJA. For GitHub Copilot, Claude Code, or other AI coding assistants. Find skills by name, description, or category.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query (skill name, description, or category like 'github', 'python', 'mcp')"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "skillNinja_install",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "ninja",
          "忍者",
          "スキル",
          "エージェントスキル"
        ],
        "toolReferenceName": "installSkill",
        "displayName": "Install Agent Skill",
        "icon": "$(cloud-download)",
        "modelDescription": "Install an Agent Skill / エージェントスキルをインストール / スキル忍者 / NINJA. Download to .github/skills/ and register in AGENTS.md.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "skillName": {
              "type": "string",
              "description": "Name of the skill to install"
            }
          },
          "required": [
            "skillName"
          ]
        }
      },
      {
        "name": "skillNinja_list",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "ninja",
          "忍者",
          "スキル",
          "エージェントスキル"
        ],
        "toolReferenceName": "listSkills",
        "displayName": "List Installed Skills",
        "icon": "$(list-tree)",
        "modelDescription": "List all installed Agent Skills / インストール済みエージェントスキル一覧 / スキル忍者 / NINJA. Shows skills in .github/skills/ directory.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "skillNinja_recommend",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "ninja",
          "忍者",
          "スキル",
          "エージェントスキル"
        ],
        "toolReferenceName": "recommendSkills",
        "displayName": "Recommend Skills",
        "icon": "$(lightbulb)",
        "modelDescription": "Recommend Agent Skills for your project / プロジェクトに合ったエージェントスキルを推奨 / スキル忍者 / NINJA. Analyzes languages, frameworks, and file patterns.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "skillNinja_uninstall",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "uninstall",
          "remove",
          "delete",
          "削除",
          "アンインストール"
        ],
        "toolReferenceName": "uninstallSkill",
        "displayName": "Uninstall Skill",
        "icon": "$(trash)",
        "modelDescription": "Uninstall an Agent Skill / エージェントスキルをアンインストール / 削除 / NINJA. Removes skill from .github/skills/ and updates AGENTS.md.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "skillName": {
              "type": "string",
              "description": "Name of the skill to uninstall"
            }
          },
          "required": [
            "skillName"
          ]
        }
      },
      {
        "name": "skillNinja_updateIndex",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "update",
          "refresh",
          "sync",
          "更新",
          "同期"
        ],
        "toolReferenceName": "updateSkillIndex",
        "displayName": "Update Skill Index",
        "icon": "$(sync)",
        "modelDescription": "Update the skill index from all sources / スキルインデックスを更新 / 同期 / NINJA. Fetches latest skills from GitHub repositories.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "skillNinja_webSearch",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "github",
          "search",
          "web",
          "検索",
          "GitHub"
        ],
        "toolReferenceName": "webSearchSkills",
        "displayName": "Search Skills on GitHub",
        "icon": "$(globe)",
        "modelDescription": "Search for Agent Skills on GitHub / GitHubでエージェントスキルを検索 / Web検索 / NINJA. Finds SKILL.md files across GitHub repositories.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query for GitHub (e.g., 'azure', 'python', 'mcp')"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "skillNinja_addSource",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "source",
          "repository",
          "add",
          "ソース",
          "リポジトリ"
        ],
        "toolReferenceName": "addSkillSource",
        "displayName": "Add Skill Source",
        "icon": "$(repo)",
        "modelDescription": "Add a new GitHub repository as a skill source / 新しいリポジトリをスキルソースとして追加 / NINJA. Repository should contain SKILL.md files.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "repoUrl": {
              "type": "string",
              "description": "GitHub repository URL (e.g., 'https://github.com/owner/repo' or 'owner/repo')"
            }
          },
          "required": [
            "repoUrl"
          ]
        }
      },
      {
        "name": "skillNinja_localize",
        "tags": [
          "skills",
          "agent",
          "skill-ninja",
          "localize",
          "translate",
          "i18n",
          "翻訳",
          "ローカライズ"
        ],
        "toolReferenceName": "localizeSkill",
        "displayName": "Localize Skill Description",
        "icon": "$(globe)",
        "modelDescription": "Translate/localize skill descriptions in the index. Provide skillName and description_en (English) and/or description_ja (Japanese) to update.",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "skillName": {
              "type": "string",
              "description": "Name of the skill to localize"
            },
            "description_en": {
              "type": "string",
              "description": "English description for the skill"
            },
            "description_ja": {
              "type": "string",
              "description": "Japanese description for the skill (日本語の説明)"
            }
          },
          "required": [
            "skillName"
          ]
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "skill-ninja",
          "title": "Agent Skill Ninja",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "skill-ninja": [
        {
          "id": "skillNinja.installedView",
          "name": "%view.workspace%",
          "icon": "resources/icon.svg"
        },
        {
          "id": "skillNinja.browseView",
          "name": "%view.browse%",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "skillNinja.search",
        "title": "%command.search%",
        "category": "Agent Skill Ninja",
        "icon": "$(search)"
      },
      {
        "command": "skillNinja.install",
        "title": "%command.install%",
        "category": "Agent Skill Ninja",
        "icon": "$(add)"
      },
      {
        "command": "skillNinja.uninstall",
        "title": "%command.uninstall%",
        "category": "Agent Skill Ninja",
        "icon": "$(trash)"
      },
      {
        "command": "skillNinja.showInstalled",
        "title": "%command.showInstalled%",
        "category": "Agent Skill Ninja"
      },
      {
        "command": "skillNinja.refresh",
        "title": "%command.refresh%",
        "category": "Agent Skill Ninja",
        "icon": "$(refresh)"
      },
      {
        "command": "skillNinja.reinstallAll",
        "title": "%command.reinstallAll%",
        "category": "Agent Skill Ninja",
        "icon": "$(sync)"
      },
      {
        "command": "skillNinja.reinstall",
        "title": "%command.reinstall%",
        "category": "Agent Skill Ninja",
        "icon": "$(sync)"
      },
      {
        "command": "skillNinja.uninstallAll",
        "title": "%command.uninstallAll%",
        "category": "Agent Skill Ninja",
        "icon": "$(trash)"
      },
      {
        "command": "skillNinja.uninstallMultiple",
        "title": "%command.uninstallMultiple%",
        "category": "Agent Skill Ninja",
        "icon": "$(checklist)"
      },
      {
        "command": "skillNinja.reinstallMultiple",
        "title": "%command.reinstallMultiple%",
        "category": "Agent Skill Ninja",
        "icon": "$(checklist)"
      },
      {
        "command": "skillNinja.openSkillFile",
        "title": "%command.openSkillFile%",
        "category": "Agent Skill Ninja",
        "icon": "$(go-to-file)"
      },
      {
        "command": "skillNinja.openSkillFolder",
        "title": "%command.openSkillFolder%",
        "category": "Agent Skill Ninja",
        "icon": "$(folder-opened)"
      },
      {
        "command": "skillNinja.updateIndex",
        "title": "%command.updateIndex%",
        "category": "Agent Skill Ninja",
        "icon": "$(cloud-download)"
      },
      {
        "command": "skillNinja.addSource",
        "title": "%command.addSource%",
        "category": "Agent Skill Ninja",
        "icon": "$(add)"
      },
      {
        "command": "skillNinja.webSearch",
        "title": "%command.webSearch%",
        "category": "Agent Skill Ninja",
        "icon": "$(globe)"
      },
      {
        "command": "skillNinja.removeSource",
        "title": "%command.removeSource%",
        "category": "Agent Skill Ninja",
        "icon": "$(trash)"
      },
      {
        "command": "skillNinja.preview",
        "title": "%command.preview%",
        "category": "Agent Skill Ninja",
        "icon": "$(eye)"
      },
      {
        "command": "skillNinja.toggleFavorite",
        "title": "%command.toggleFavorite%",
        "category": "Agent Skill Ninja",
        "icon": "$(star)"
      },
      {
        "command": "skillNinja.showFavorites",
        "title": "%command.showFavorites%",
        "category": "Agent Skill Ninja",
        "icon": "$(star-full)"
      },
      {
        "command": "skillNinja.openOnGitHub",
        "title": "%command.openOnGitHub%",
        "category": "Agent Skill Ninja",
        "icon": "$(github)"
      },
      {
        "command": "skillNinja.browseByCategory",
        "title": "%command.browseByCategory%",
        "category": "Agent Skill Ninja",
        "icon": "$(filter)"
      },
      {
        "command": "skillNinja.showRecent",
        "title": "%command.showRecent%",
        "category": "Agent Skill Ninja",
        "icon": "$(history)"
      },
      {
        "command": "skillNinja.registerLocalSkill",
        "title": "%command.registerLocalSkill%",
        "category": "Agent Skill Ninja",
        "icon": "$(add)"
      },
      {
        "command": "skillNinja.unregisterLocalSkill",
        "title": "%command.unregisterLocalSkill%",
        "category": "Agent Skill Ninja",
        "icon": "$(remove)"
      },
      {
        "command": "skillNinja.createSkill",
        "title": "%command.createSkill%",
        "category": "Agent Skill Ninja",
        "icon": "$(new-file)"
      },
      {
        "command": "skillNinja.refreshLocal",
        "title": "%command.refresh%",
        "category": "Agent Skill Ninja",
        "icon": "$(refresh)"
      },
      {
        "command": "skillNinja.updateInstruction",
        "title": "%command.updateInstruction%",
        "category": "Agent Skill Ninja",
        "icon": "$(sync)"
      },
      {
        "command": "skillNinja.openInstructionFile",
        "title": "%command.openInstructionFile%",
        "category": "Agent Skill Ninja",
        "icon": "$(file-text)"
      },
      {
        "command": "skillNinja.openSettings",
        "title": "%command.openSettings%",
        "category": "Agent Skill Ninja",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "skillNinja.openInstructionFile",
          "when": "view == skillNinja.installedView",
          "group": "navigation@1"
        },
        {
          "command": "skillNinja.createSkill",
          "when": "view == skillNinja.installedView",
          "group": "navigation@2"
        },
        {
          "command": "skillNinja.refresh",
          "when": "view == skillNinja.installedView",
          "group": "navigation@3"
        },
        {
          "command": "skillNinja.openSettings",
          "when": "view == skillNinja.installedView",
          "group": "navigation@4"
        },
        {
          "command": "skillNinja.reinstallAll",
          "when": "view == skillNinja.installedView",
          "group": "actions@1"
        },
        {
          "command": "skillNinja.uninstallAll",
          "when": "view == skillNinja.installedView",
          "group": "actions@2"
        },
        {
          "command": "skillNinja.uninstallMultiple",
          "when": "view == skillNinja.installedView",
          "group": "actions@3"
        },
        {
          "command": "skillNinja.reinstallMultiple",
          "when": "view == skillNinja.installedView",
          "group": "actions@4"
        },
        {
          "command": "skillNinja.search",
          "when": "view == skillNinja.browseView",
          "group": "navigation@1"
        },
        {
          "command": "skillNinja.webSearch",
          "when": "view == skillNinja.browseView",
          "group": "navigation@2"
        },
        {
          "command": "skillNinja.updateIndex",
          "when": "view == skillNinja.browseView",
          "group": "navigation@3"
        },
        {
          "command": "skillNinja.addSource",
          "when": "view == skillNinja.browseView",
          "group": "navigation@4"
        }
      ],
      "view/title/context": [
        {
          "command": "skillNinja.refresh",
          "when": "view == skillNinja.installedView || view == skillNinja.browseView"
        },
        {
          "command": "skillNinja.uninstallMultiple",
          "when": "view == skillNinja.installedView"
        },
        {
          "command": "skillNinja.reinstallMultiple",
          "when": "view == skillNinja.installedView"
        },
        {
          "command": "skillNinja.refreshLocal",
          "when": "view == skillNinja.localView"
        },
        {
          "command": "skillNinja.createSkill",
          "when": "view == skillNinja.localView"
        }
      ],
      "view/item/context": [
        {
          "command": "skillNinja.install",
          "when": "view == skillNinja.browseView && viewItem == skill",
          "group": "inline@1"
        },
        {
          "command": "skillNinja.preview",
          "when": "view == skillNinja.browseView && viewItem == skill",
          "group": "inline@2"
        },
        {
          "command": "skillNinja.toggleFavorite",
          "when": "view == skillNinja.browseView && viewItem == skill",
          "group": "inline@3"
        },
        {
          "command": "skillNinja.openOnGitHub",
          "when": "view == skillNinja.browseView && (viewItem == skill || viewItem == source)",
          "group": "inline@4"
        },
        {
          "command": "skillNinja.uninstall",
          "when": "view == skillNinja.installedView && viewItem == installedSkill",
          "group": "inline"
        },
        {
          "command": "skillNinja.reinstall",
          "when": "view == skillNinja.installedView && viewItem == installedSkill",
          "group": "inline"
        },
        {
          "command": "skillNinja.openSkillFolder",
          "when": "view == skillNinja.installedView && (viewItem == installedSkill || viewItem == localSkill)",
          "group": "inline"
        },
        {
          "command": "skillNinja.openSkillFile",
          "when": "view == skillNinja.installedView && (viewItem == installedSkill || viewItem == localSkill)",
          "group": "inline"
        },
        {
          "command": "skillNinja.removeSource",
          "when": "view == skillNinja.browseView && viewItem == source",
          "group": "inline"
        },
        {
          "command": "skillNinja.registerLocalSkill",
          "when": "view == skillNinja.installedView && viewItem == localSkill",
          "group": "inline"
        },
        {
          "command": "skillNinja.unregisterLocalSkill",
          "when": "view == skillNinja.installedView && viewItem == localSkill",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Agent Skill Ninja",
      "properties": {
        "skillNinja.autoUpdateInstruction": {
          "type": "boolean",
          "default": true,
          "order": 1,
          "markdownDescription": "%config.autoUpdateInstruction.markdownDescription%"
        },
        "skillNinja.instructionFile": {
          "type": "string",
          "default": "AGENTS.md",
          "order": 2,
          "enum": [
            "AGENTS.md",
            ".github/copilot-instructions.md",
            ".github/instructions/SkillList.instructions.md",
            "CLAUDE.md",
            "custom"
          ],
          "enumDescriptions": [
            "%config.instructionFile.agents%",
            "%config.instructionFile.copilot%",
            "%config.instructionFile.instructions%",
            "%config.instructionFile.claude%",
            "%config.instructionFile.custom%"
          ],
          "markdownDescription": "%config.instructionFile.markdownDescription%"
        },
        "skillNinja.customInstructionPath": {
          "type": "string",
          "default": "",
          "order": 3,
          "markdownDescription": "%config.customInstructionPath.markdownDescription%"
        },
        "skillNinja.includeLocalSkills": {
          "type": "boolean",
          "default": true,
          "order": 4,
          "markdownDescription": "%config.includeLocalSkills.markdownDescription%"
        },
        "skillNinja.skillsDirectory": {
          "type": "string",
          "default": ".github/skills",
          "order": 5,
          "description": "%config.skillsDirectory.description%"
        },
        "skillNinja.githubToken": {
          "type": "string",
          "default": "",
          "order": 6,
          "markdownDescription": "%config.githubToken.markdownDescription%"
        },
        "skillNinja.language": {
          "type": "string",
          "default": "auto",
          "order": 7,
          "enum": [
            "auto",
            "en",
            "ja"
          ],
          "enumDescriptions": [
            "%config.language.auto%",
            "%config.language.en%",
            "%config.language.ja%"
          ],
          "description": "%config.language.description%"
        },
        "skillNinja.outputFormat": {
          "type": "string",
          "default": "auto",
          "order": 8,
          "enum": [
            "auto",
            "markdown",
            "cursor-rules",
            "windsurf-rules",
            "cline-rules"
          ],
          "enumDescriptions": [
            "%config.outputFormat.auto%",
            "%config.outputFormat.markdown%",
            "%config.outputFormat.cursor%",
            "%config.outputFormat.windsurf%",
            "%config.outputFormat.cline%"
          ],
          "markdownDescription": "%config.outputFormat.markdownDescription%"
        },
        "skillNinja.enableToolDetection": {
          "type": "boolean",
          "default": true,
          "order": 9,
          "markdownDescription": "%config.enableToolDetection.markdownDescription%"
        },
        "skillNinja.singleClickInstall": {
          "type": "boolean",
          "default": false,
          "order": 10,
          "description": "%config.singleClickInstall.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "vscode-nls": "^5.2.0"
  }
}
